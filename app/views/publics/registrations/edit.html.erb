<section class="slice slice-lg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="form-user rounded has-shadow">
          <div class="form-header text-center">
            <h2 class="form-header-title">パスワード変更</h2>
          </div>
          <div class="form-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "publics/shared/error_messages", resource: resource %>
            <div class="form-group has-icon">
              <label class="control-label sr-only" for="inputEmail">Email</label>
              <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>
              <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="form-group has-icon">
              <label class="control-label sr-only" for="inputPassword">Password</label>
              <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"新パスワード" %>
              <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> 文字以上</em>
              <% end %>
            </div>
            <div class="form-group has-icon">
              <label class="control-label sr-only" for="inputConfirmPassword">Password</label>
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"新パスワード確認" %>
              <span class="fa fa-check-circle-o form-control-icon" aria-hidden="true"></span>
            </div>

            <div class="form-group has-icon">
              <label class="control-label sr-only" for="inputCurrentPassword">Password</label>
              <%= f.password_field :current_password, autocomplete: "off", class:"form-control", id:"inputCurrentPassword", placeholder:"旧パスワード" %>
              <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> 文字以上</em>
              <% end %>
            </div>

            <div class="actions">
              <%= f.submit "パスワード更新", class:"btn btn-lg btn-block btn-base-1 margintop-base-1" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
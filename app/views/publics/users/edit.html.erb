<div class="row">
    <div class="col-xs-12 text-center">
      <h2>ユーザー情報編集</h2>
    </div>
  </div>

  <div class='row'>
    <div class="col-xs-12">
      <%= form_with(model: @user, url:update_users_path(@user), local: true, method: :patch) do |f| %>
      <div class='form-group row'>
      	<div class="col-xs-6">
					<div class="img_field">
						<%= attachment_image_tag(@user, :profile_image, size: "300x300") %>
					</div>
      		<div class="img-form">
        		<%= f.attachment_field :profile_image, class: "profile_image" %>
      		</div>
    		</div>

    		<div class='col-xs-6'>
          <h4><%= f.label :ユーザー名 %></h4>
          <span style='display: inline-block;'>
            <%= f.text_field :name, class: 'form-control' %>
          </span>
          <h4><%= f.label :メールアドレス %></h4>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>

    <div class="action-button">
      <div class="col-lg-2 col-lg-offset-4">
        <%= f.submit '編集内容を保存する', class:'btn btn-success' %>
      </div>
      <div class="col-lg-2">
        <%= link_to '退会する', users_unsubscribe_path, class: 'glyphicon glyphicon-remove btn btn-danger' %>
      </div>
    </div>
    <% end %>
  </div>
</div>



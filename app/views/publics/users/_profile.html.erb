<div class="col-xs-3">
	<h3><i class="fas fa-user-tie"></i><strong class="underline-1">プロフィール</strong></h3>
	<div><%= attachment_image_tag(user, :profile_image, size: "100x100", class: "img-circle center-block iconimg-1", fallback: "no_image2.jpg") %>
	</div>
	<div class="text-center fontweight-1 mt-1"><%= user.name %></div>
	<div class="text-center fontsize-2"><%= user.email %></div>
  <div>
    <%= link_to edit_users_path, class: "btn btn-success btn-1 mt-1" do %>
      <span><i class="fas fa-user-edit"></i> 編集</span>
    <% end %>
    <%= link_to edit_user_registration_path, class: "btn btn-warning pull-right btn-1 mt-1" do %>
      <span><i class="fas fa-user-cog"></i> パスワード変更</span>
    <% end %>
  </div>
</div>

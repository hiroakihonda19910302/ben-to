<div class='row'>
  <div class="col-xs-12 text-center">
  	<h3><i class="fas fa-search"></i><span class="fontshadow-1 underline-1"><strong>入力して検索</strong></h3>
  	<%= form_with(url: posts_path, method: :get, local: :true) do |f| %>
  		<%= f.text_field :title_search, class: "search-form", placeholder:"検索ワードを入力" %>
  		<%= f.submit '投稿検索', class: "btn btn-primary btn-1 mb-1"  %>
		<% end %>
	</div>
</div>

<div class='row'>
  <div class="col-xs-12 text-center mt-1">
  	<h3><i class="fas fa-search"></i><span class="fontshadow-1 underline-1"><strong>ジャンル検索</strong></h3>
  </div>
  <% @genres.each do |genre| %>
  	<% if genre.genre_status == true %>
  		<div class="col-xs-4 text-center">
  			<%= form_with(url: posts_path, method: :get, local: :true) do |f| %>
  				<%= f.hidden_field :search, value:genre.id %>
  				<%= f.submit genre.name, class: "btn btn-info btn-lg genres-btn" %>
  			<% end %>
			</div>
  	<% end %>
  <% end %>
  <div class= "text-center"><%= paginate(@genres) %></div>
  <a>
    <%= link_to posts_path, class: 'btn-emergency pull-right mt-1' do %>
      <span class="btn-emergency-bottom"></span>
      <span class="btn-emergency-top"><span class="">すべて見る</span></span>
    <% end %>
  </a>
</div>

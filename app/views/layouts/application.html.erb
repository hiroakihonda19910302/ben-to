<!DOCTYPE html>
<html>
  <head>
    <title>BenTo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/da6e295665.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <h3>
            <%= link_to root_path, :style=>"color: white; text-decoration:none;" do %>
              <i class="fas fa-magic"></i><strong>Ben-To</strong><i class="fas fa-magic"></i><span class="fontsize-3"> -便利なモノ投稿サイト-</span>
            <% end %>
          </h3>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to users_path do %>
                  <span><i class="fas fa-user-tie"></i> マイページ</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_post_path do %>
                  <span><i class="fas fa-feather"></i> 新規投稿</span>
                <% end %>
              </li>
              <li>
                <%= link_to posts_path do %>
                  <span><i class="fas fa-list-ul"></i> 投稿一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to ranking_posts_path do %>
                  <span><i class="fas fa-crown"></i> ランキング</span>
                <% end %>
              </li>
              <li>
                <%= link_to search_posts_path do %>
                  <span><i class="fas fa-search"></i> 検索</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <span><i class="fas fa-sign-out-alt"></i> ログアウト</span>
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to admins_posts_path do %>
                  <span><i class="fas fa-list-ul"></i> 投稿一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to admins_users_path do %>
                  <span><i class="fas fa-users"></i> 会員一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to ranking_admins_posts_path do %>
                  <span><i class="fas fa-crown"></i> ランキング一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to admins_genres_path do %>
                  <span><i class="fas fa-th-large"></i> ジャンル一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <span><i class="fas fa-sign-out-alt"></i> ログアウト</span>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to about_path do %>
                  <span><i class="fas fa-info-circle"></i> about</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                  <span><i class="fas fa-user-plus"></i> 新規登録</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <span><i class="fas fa-sign-in-alt"></i> ログイン</span>
                <% end %>
              </li>
              <li>
                <%= link_to posts_path do %>
                  <span><i class="fas fa-list-ul"></i> 投稿一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to search_posts_path do %>
                  <span><i class="fas fa-search"></i> 検索</span>
                <% end %>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div id="flash">
          <%= render "layouts/flash" %>
        </div>
      </div>
      <%= yield %>
    </div>
    <footer class="navbar">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

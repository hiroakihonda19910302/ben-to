<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h2>ジャンル一覧・追加</h2></br>
      <%= form_for(@genre, url: admins_genres_path, method: :post) do |f| %>
        <div>
          <%= f.label :"ジャンル", class: "control-label" %>
          <%= f.text_field :name %>
          <%= f.radio_button :genre_status, true %>
          <%= f.label :genre_status, "有効", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :genre_status, false %>
          <%= f.label :genre_status, "無効", {value: :false, style: "display: inline-block;"} %>
          <%= f.submit "追加", class: "btn btn-info btn-base-3 marginbottom-base-1" %>
        </div>
      <% end %>

      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= genre.name%></td>

              <% if genre.genre_status == true %>
                <td><i class="far fa-smile-wink"></i>有効</td>
              <% else %>
                <td><i class="far fa-tired"></i>無効</td>
              <% end %>
              <td>
                <%= link_to edit_admins_genre_path(genre), class: "btn btn-primary btn-base-3" do %>
                  <span><i class="far fa-edit"></i> 編集する</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class= "text-center"><%= paginate(@genres) %></div>
  </div>
</div>
<div class="col-xs-12">
  <% post.reviews.each do |review| %>
    <div class="form-2">
      <div class="faceicon">
        <%= attachment_image_tag(review.user, :profile_image, :fill, 100, 100, class: "faceicon-img", fallback: "no_image2.jpg") %>
        <p class="fontsize-1"><i class="fas fa-user"></i><%= review.user.name %></p>
      </div>
      <div class="chatting">
        <div class="says-1">
          <p class="fontweight-1"><%= l review.created_at, format: :default %></p>
          <p class="fontweight-1">評価：<%= review.rate %></p>
          <p class="review-rating" data-score="<%= review.rate %>"></p>
          <p class="fontweight-1"><%= review.title %></p>
          <p class=""><%= review.review %></p>
        </div>
        <%= link_to admins_post_path(post) do %>
          <%= attachment_image_tag(review.post, :post_image, size: "150x150", class: "posticon-img", fallback: "no_image2.jpg") %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<script>
  $('.review-rating').raty({
    readOnly: true,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>